<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="information" sortOrder="10">
        <field name="twilio_sms" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">field</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        If enabled twilio sms will be enabled. This will work with telephone field type only.
                    </item>
                    <item name="toggleLabels" xsi:type="array">
                        <item name="on" xsi:type="string">Yes</item>
                        <item name="off" xsi:type="string">No</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Twilio Sms</label>
                <dataScope>twilio_sms</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
